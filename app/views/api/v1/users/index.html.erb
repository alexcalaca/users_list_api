<h1>Users</h1>
<%= form_tag users_index_path, method: :get do %>
  <%= text_field_tag :query, params[:query], placeholder: 'Search by name' %>
  <%= submit_tag 'Search' %>
<% end %>
<hr/>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Age</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.age %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<br/>

<%= will_paginate @users %>
